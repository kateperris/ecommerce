<h1>Listing products</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>String</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Color</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%= render @products %>
  </tbody>
</table>
</div>
<br>

<button type="button" class="btn btn-primary"><%= link_to 'New Product', new_product_path %></button>
